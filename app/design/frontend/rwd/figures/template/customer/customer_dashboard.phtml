                                <div class="form-group">
                                    <label for="delivery_full_name">Address line 1</label>
                                    <input type="email" class="form-control" id="delivery_full_name" placeholder="Enter Address line 1">
                                </div>
                                <div class="form-group">
                                    <label for="delivery_full_name">Address line 2</label>
                                    <input type="email" class="form-control" id="delivery_full_name" placeholder="Enter Address line 2">
                                </div>
                                <div class="form-group">
                                    <label for="delivery_full_name">State</label>
                                    <input type="email" class="form-control" id="delivery_full_name" placeholder="Enter State">
                                </div>
                                <div class="form-group">
                                    <label for="delivery_full_name">City</label>
                                    <input type="email" class="form-control" id="delivery_full_name" placeholder="Enter City">
                                </div>
                                <div class="form-group">
                                    <label for="delivery_full_name">ZIP code</label>
                                    <input type="email" class="form-control" id="delivery_full_name" placeholder="Enter ZIP code">
                                </div>
                                <div class="form-group">
                                    <label for="delivery_full_name">Country</label>
                                    <input type="email" class="form-control" id="delivery_full_name" placeholder="Enter Country">
                                </div>
                                <div class="form-group">
                                    <label for="delivery_full_name">Full name</label>
                                    <input type="email" class="form-control" id="delivery_full_name" placeholder="Enter Full name">
                                </div>
                                <button type="submit" class="btn btn-primary float-right">Submit</button>
                            </form>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
