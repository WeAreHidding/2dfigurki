            <div class="card">
                <div class="card-header">
                    General Settings
                </div>
                <div class="card-body">
                    <form class="form-group">
                        <ul class="list-group list-group-flush">

                            <li class="list-group-item">
                                <label>Profile Picture</label>
                                <div class="form-group">
                                    <input type="file">
                                    <br>
                                    <small class="text-muted">Must be a .jpg, .gif or .png file smaller then 10MB and at least 400px by 400px</small>
                                </div>
                            </li>

                            <li class="list-group-item">
                                <label>Wallpaper</label>
                                <div class="form-group">
                                    <input type="file">
                                </div>
                            </li>

                            <li class="list-group-item">
                                <label>Your name</label>
                                <div class="form-group">
                                    <span>Sultan kembayev</span>
                                    <a href="/">Change or remove</a>
                                </div>
                            </li>

                            <li class="list-group-item">
                                <label>Gender</label>
                                <div class="form-group">
                                    <label>
                                        <input type="radio" name="general-gender">
                                        Male
                                    </label>
                                    <label>
                                        <input type="radio" name="general-gender">
                                        Female
                                    </label>
                                    <label>
                                        <input type="radio" name="general-gender">
                                        Prefer not say
                                    </label>
                                </div>
                            </li>

                            <li class="list-group-item">
                                <label>City</label>
                                <div class="form-group">
                                    <input type="text">
                                    <br>
                                    <small class="text-muted">Start typing and choose from a suggested city to help find you.</small>
                                </div>
                            </li>

                            <li class="list-group-item">
                                <label>Birthday</label>
                                <div class="form-group">
                                    <select name="" id="">
                                        <option value="1">January</option>
                                    </select>
                                    <select name="" id="">
                                        <option value="1">1</option>
                                    </select>
                                </div>
                            </li>

                            <li class="list-group-item">
                                <label>About</label>
                                <div class="form-group">
                                    <textarea name="" id="" cols="10" rows="8"></textarea>
                                    <br>
                                    <small class="text-muted">Tell people a little about yourself.</small>
                                </div>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="nav-delivery" role="tabpanel" aria-labelledby="nav-delivery-tab">
