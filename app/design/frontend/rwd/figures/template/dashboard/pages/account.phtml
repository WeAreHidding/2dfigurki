<script>
    function changeEmail() {

        event.preventDefault();

        if (window.inProgress) {
            return;
        }
        var email = jQuery("#acc_email").val();

        jQuery.ajax({
            url: "/figures_dashboard/dashboard/changeEmail",
            type: "POST",
            data: {email:email},
            beforeSend: function() {
                window.inProgress = true;
            },
            success: function (data) {
                window.inProgress = false;
                if(data.status=="success"){
                    showNotify(data.title, data.message, 'success');
                } else if(data.status=="error"){
                    showNotify(data.title , data.message, 'danger');
                }
            },
            cache: false
        });
    }

    function changePassword() {

        event.preventDefault();

        if (window.inProgress) {
            return;
        }
        var password = jQuery("#acc_password").val();

        jQuery.ajax({
            url: "/figures_dashboard/dashboard/changePassword",
            type: "POST",
            data: {password:password},
            beforeSend: function() {
                window.inProgress = true;
            },

            success: function (data) {
                window.inProgress = false;
                if(data.status=="success"){
                    showNotify(data.title, data.message, 'success');
                } else if(data.status=="error"){
                    showNotify(data.title , data.message, 'danger');
                }
            },
            cache: false
        });
    }

</script>