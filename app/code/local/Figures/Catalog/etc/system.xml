<?xml version="1.0"?>
<config>
    <sections>
        <custom_search translate="label">
            <tab>general</tab>
            <label>Search</label>
            <sort_order>1500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>Search configuration</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <search_entities>
                            <label>Search enabled for:</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>figures_catalog/source_searchEntities</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </search_entities>
                        <designers_limit translate="label,comment">
                            <label>Max designers</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                Max designers per search result (default 1)
                            </comment>
                        </designers_limit>
                        <categories_limit translate="label,comment">
                            <label>Max categories</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                Max categories per search result (default 1)
                            </comment>
                        </categories_limit>
                        <products_limit translate="label,comment">
                            <label>Max products</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                Max products per search result (default 10)
                            </comment>
                        </products_limit>
                        <max_searches translate="label,comment">
                            <label>Max searches per user session</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                Max searches per user session to avoid bot spam (default 50)
                            </comment>
                        </max_searches>
                    </fields>
                </general>
            </groups>
        </custom_search>
    </sections>
</config>